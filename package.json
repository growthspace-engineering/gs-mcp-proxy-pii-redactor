{
  "name": "@growthspace-engineering/gs-mcp-proxy-pii-redactor",
  "version": "2.1.0-beta.5",
  "description": "MCP Proxy with PII Redaction & Tool Filtering",
  "author": "thatkookooguy <neilkalman@gmail.com>",
  "license": "MIT",
  "main": "dist/main.js",
  "bin": {
    "gs-mcp-proxy": "dist/main.js"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE",
    "package.json",
    "config.json"
  ],
  "scripts": {
    "prune-merged": "kb-prune-merged",
    "build": "nest build",
    "prepublishOnly": "npm run build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:stdio": "node dist/main.js --config config.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "prepare": "husky",
    "commit": "cz",
    "inject": "node scripts/inject-themes.cjs ./test-results/gs-mcp-proxy-pii-redactor gs-mcp-proxy-pii-redactor",
    "pretest": "rimraf test-results",
    "test": "jest --cache",
    "posttest": "npm run inject",
    "test:watch": "jest --watch",
    "pretest:cov": "rimraf test-results",
    "test:cov": "jest --coverage --cache",
    "posttest:cov": "npm run inject",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "rimraf test-results",
    "test:e2e": "jest --config ./e2e/jest-e2e.config.ts --runInBand",
    "test:e2e:cov": "jest --config ./e2e/jest-e2e.config.ts --coverage --runInBand",
    "posttest:e2e": "npm run inject",
    "posttest:e2e:cov": "npm run inject",
    "test:e2e:watch": "jest --config ./e2e/jest-e2e.config.ts --watch --runInBand",
    "coverage:merge": "node scripts/build-combined-coverage.cjs",
    "test:unit:cov": "jest --coverage --cache --passWithNoTests --coverageDirectory ./test-results/gs-mcp-proxy-pii-redactor/unit/coverage",
    "pretest:all:cov": "rimraf test-results",
    "test:all:cov": "concurrently --success all -n unit,e2e -c blue,magenta \"npm run test:unit:cov\" \"npm run test:e2e:cov\" && npm run coverage:merge",
    "lsmcp:init": "npx @mizchi/lsmcp init -p typescript",
    "lsmcp:index": "npx @mizchi/lsmcp index -p typescript",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "contributors:check": "all-contributors check",
    "docker:build": "IMAGE=gs-mcp-pii-redactor && VERSION=$(node -p \"require('./package.json').version\") && docker build -t $IMAGE:latest -t $IMAGE:$VERSION .",
    "docker:run": "IMAGE=gs-mcp-pii-redactor && PORT=$(node -e \"const a=require('./config.json').mcpProxy?.addr||':8083';console.log(String(a).replace(':','')||'8083')\") && docker run --rm -e GITHUB_TOKEN -e MCP_PROXY_GCS_BUCKET -e MCP_PROXY_GCS_FILES -e MCP_PROXY_SERVICE_ACCOUNT -e MCP_PROXY_SERVICE_ACCOUNT_B64 -p $PORT:$PORT -v $(pwd)/config.json:/app/config.json $IMAGE:latest",
    "docker:run:min": "docker run --rm -p 8084:8084 -v $(pwd)/docker-config.min.json:/app/config.json gs-mcp-pii-redactor:latest",
    "deploy:docker": "npm run docker:build && npm run docker:run",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.0.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@types/eventsource": "^1.1.15",
    "ahocorasick": "^1.0.2",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "eventsource": "^4.0.0",
    "fs-extra": "^11.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@kibibit/dev-tools": "^1.1.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.24",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "all-contributors-cli": "^6.26.1",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint": "^8.42.0",
    "husky": "^9.1.7",
    "jest-junit": "^16.0.0",
    "jest-stare": "^2.5.2",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "rimraf": "^5.0.5",
    "semantic-release": "^25.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "homepage": "https://github.com/growthspace-engineering/gs-mcp-proxy-pii-redactor",
  "bugs": "https://github.com/growthspace-engineering/gs-mcp-proxy-pii-redactor/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growthspace-engineering/gs-mcp-proxy-pii-redactor.git"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "mcp",
    "mcp-proxy",
    "pii-redactor",
    "pii-filter",
    "redaction",
    "data-privacy",
    "security",
    "compliance",
    "proxy",
    "sse",
    "server-sent-events",
    "http-proxy",
    "typescript",
    "nodejs",
    "growthspace",
    "ai-gateway",
    "ai-agent",
    "mcp-aggregator",
    "middleware"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  }
}
